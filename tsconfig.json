{
  "compilerOptions": {
    "outDir": "app/dist/js",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "experimentalDecorators": true
  },
  "include": ["app/**/*.ts"]
}
